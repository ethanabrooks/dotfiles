#!/bin/zsh

if [[ $# -eq 1 ]]; then
  if [[ $1 -lt 2 || $1 -gt 4 ]];  then
    echo "$1 must be between 2 and 4"
    exit
  fi
  array=($1)
else
  array=(2 3 4)
fi

image=qbert
dir=tf-docker
src=$HOME/$dir

for x in $array; do
  server=ethan@10.113.2.1$x
  dst=$server:~/
  rsync -av $src $dst \
    --exclude $src/rl_kit/rl_kit/examples/traces/*.json \
    --exclude $src/rl_kit/.idea
  ssh $server "docker build -t $image -f $dir/Dockerfile $dir" &
done
wait
echo "All synced."
