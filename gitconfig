[diff]
  tool = opendiff
[difftool]
  prompt = false
[difftool "filemerge"]
  cmd = opendiff "$LOCAL" "$REMOTE"
[core]
  editor = nvim
[push]
  default = simple
[merge]
  tool = opendiff
[alias]
  lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
  br = branch
  co = checkout
  cm = commit -am
  df = !git reset && git diff
